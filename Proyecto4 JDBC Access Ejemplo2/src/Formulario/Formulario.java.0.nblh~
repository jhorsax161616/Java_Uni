private void BuscarXCodigoActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_BuscarXCodigoActionPerformed
    String cod = tcod.getText();
    Integer idProd;
    idProd = Integer.parseInt(cod);
    dt.setRowCount(0);
    //for(Producto x:obj.LisProducto(idProd)){
    Producto x:obj.LisProducto(idProd);
    dt.addRow(new Object[] {x.getCodProd(),x.getDescrip(), x.getSaldo()});
    //}
}//GEN-LAST:event_BuscarXCodigoActionPerformed
